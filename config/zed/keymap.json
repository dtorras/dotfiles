[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-1": "workspace::ToggleLeftDock",
      "cmd-shift-c": "terminal_panel::ToggleFocus",
      "cmd-e": "file_finder::Toggle",
      "cmd-shift-g": "editor::OpenPermalinkToLine",
      "cmd-y": "outline::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-c": "terminal_panel::ToggleFocus",
      "cmd-e": "file_finder::Toggle",
      "cmd-y": "outline::Toggle",
      "cmd-:": ["editor::ToggleComments", { "advance_downwards": false }],
      "alt-space": "editor::Hover",
      "cmd-shift-g": "editor::OpenPermalinkToLine",
      "cmd-alt-l": "editor::Format",
      "ctrl-h": "pane::SplitDown"
    }
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "cmd-i": "pane::RevealInProjectPanel"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-shift-c": "workspace::ToggleBottomDock",
      "cmd-e": "file_finder::Toggle",
      "ctrl-h": "pane::SplitDown"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-tab": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-tab": null
    }
  },
  {
    "bindings": {
      "ctrl-v": "pane::SplitRight",
      "ctrl-h": "pane::SplitDown"
    }
  }
]
